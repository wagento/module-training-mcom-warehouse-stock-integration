<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Show Source Stock</title>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Training_McomWarehouseStockIntegration::show_source_stock</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block  name="show_source_stock"
                    class="Training\McomWarehouseStockIntegration\Block\Adminhtml\SourceStock\Show"
                    template="Training_McomWarehouseStockIntegration::sourcestock/show.phtml"/>
        </referenceContainer>
    </body>
</page>
